<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/igCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_800_transparent_35">

        <!-- SHA -->

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Commit_H1_TextView"
            android:id="@+id/id_commit_sha_label__text_view"
            android:typeface="monospace"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/commit_sha" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_sha__text_view"
            style="@style/Commit_H2_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_sha_label__text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Octocat" />

        <!-- Name -->

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Commit_H1_TextView"
            android:id="@+id/id_commit_name_label__text_view"
            android:typeface="monospace"
            app:layout_constraintTop_toBottomOf="@id/id_commit_sha__text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/commit_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_name__text_view"
            style="@style/Commit_H2_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_name_label__text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Octocat" />

        <!-- Email -->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_email_label__text_view"
            style="@style/Commit_H1_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_name__text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/commit_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_email__text_view"
            style="@style/Commit_H2_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_email_label__text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Octocat" />

        <!-- Date -->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_date_label__text_view"
            style="@style/Commit_H1_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_email__text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/commit_date" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_date__text_view"
            style="@style/Commit_H2_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_date_label__text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Octocat" />

        <!-- Message -->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_message_label__text_view"
            style="@style/Commit_H1_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_date__text_view"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@string/commit_message" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_commit_message__text_view"
            style="@style/Commit_H2_TextView"
            app:layout_constraintTop_toBottomOf="@id/id_commit_message_label__text_view"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Octocat" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>